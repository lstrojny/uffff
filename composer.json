{
    "name": "lstrojny/uffff",
    "description": "Input filter to handle unicode",
    "type": "library",
    "require": {
        "php": "^8.2",
        "ext-intl": "*",
        "lib-pcre-unicode": "*",
        "webmozart/assert": "^1.11"
    },
    "require-dev": {
        "ext-xdebug": "*",
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "vimeo/psalm": "^5.8",
        "psalm/plugin-phpunit": "^0.18.4",
        "symplify/easy-coding-standard": "^11.2",
        "veewee/composer-run-parallel": "^1.2",
        "rregeer/phpunit-coverage-check": "^0.3.1"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Uffff\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "authors": [
        {
            "name": "Lars Strojny",
            "email": "lars@strojny.net"
        }
    ],
    "scripts": {
        "test": [
            "phpunit",
            "coverage-check build/coverage/clover.xml 100"
        ],
        "check-phpstan": "phpstan",
        "check-psalm": "psalm --show-info=true",
        "check-fmt": "ecs check",
        "fmt": "@check-fmt --fix",
        "check": "@parallel test check-phpstan check-psalm check-fmt"
    },
    "config": {
        "allow-plugins": {
            "veewee/composer-run-parallel": true
        }
    }
}
